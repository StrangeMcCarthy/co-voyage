# Server Configuration
PORT=5000
HOST=0.0.0.0
ENVIRONMENT=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/covoyage_db
MONGODB_DATABASE=covoyage_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long
JWT_ISSUER=covoyage-api
JWT_AUDIENCE=covoyage-app
JWT_REALM=covoyage
JWT_EXPIRES_IN=86400000
JWT_REFRESH_EXPIRES_IN=604800000

# Flutterwave Configuration
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-xxxxxxxxxxxxx
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-xxxxxxxxxxxxx
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TESTxxxxxxxxxxxxx
FLUTTERWAVE_WEBHOOK_SECRET=your-webhook-secret

# Platform Fee (percentage)
PLATFORM_FEE_PERCENTAGE=2.0

# Email Configuration
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@covoyage.cm

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+237xxxxxxxxx

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend URLs
FRONTEND_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3001

# Escrow Configuration
AUTO_RELEASE_HOURS=24
DISPUTE_RESOLUTION_HOURS=72

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
